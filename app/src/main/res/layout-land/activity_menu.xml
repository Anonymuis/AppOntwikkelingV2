<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/activity_color"
                android:id="@+id/activity_menu_landscape"
                tools:context=".MenuActivity">

    <FrameLayout
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:id="@+id/fragmentContainerListViewMenu"
        android:layout_margin="5dp" />

    <FrameLayout
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/fragmentContainerListViewMenu"
        android:layout_toRightOf="@+id/fragmentContainerListViewMenu"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:id="@+id/fragmentContainerSelectedItem"
        android:layout_margin="5dp" />
</RelativeLayout>
